{
  "parserOptions": {
    "ecmaVersion": 9
  },
  "rules": {
    "camelcase": [
      2,
      {
        "allow": [
          "[a-z]+(_[a-z])*"
        ]
      }
    ],
    "no-console": [
      "off"
    ],
    "indent": [
      2,
      2
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "never"
    ]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended"
}